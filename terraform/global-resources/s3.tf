resource "aws_s3_bucket" "kops_state_store" {
  bucket = "${var.project_name}-kops"
  acl    = "private"

  versioning {
    enabled = true
  }

  server_side_encryption_configuration {
    rule {
      apply_server_side_encryption_by_default {
        sse_algorithm = "AES256"
      }
    }
  }
}

