apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{ .name }}
  namespace: {{ .namespace }}
spec:
  podSelector: {}
  policyTypes:
  - Ingress
  ingress:
  - from:
    {{ if .allowSameNamespace }}
    - podSelector: {}
    {{ end }}
    {{ if .allowedNamespaces }}
    {{ range .allowedNamespaces }}
    - namespaceSelector:
        matchLabels:
          name: {{ . }}
    {{ end }}
    {{ end }}