apiVersion: apps/v1
kind: Deployment
metadata:
  name: unprivileged-integration-test
  namespace: {{ .namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: unprivileged-integration-test
  template:
    metadata:
      labels:
        app: unprivileged-integration-test
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
      containers:
        - name: box
          image: busybox:1
          command: [ "sh", "-c", "sleep 1h" ]

