apiVersion: apps/v1
kind: Deployment
metadata:
  name: privileged-integration-test
  namespace: {{ .namespace }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: privileged-integration-test
  template:
    metadata:
      labels:
        app: privileged-integration-test
    spec:
      securityContext:
        runAsUser: 0
        runAsGroup: 0
        fsGroup: 0
      containers:
        - name: box
          image: busybox:1
          command: [ "sh", "-c", "sleep 1h" ]

