apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: integration-test-nginx-ing
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$1
    kubernetes.io/ingress.class: "nginx"
spec:
  tls:
  - hosts:
    - badsyntax<%= host %>
  rules:
  - host: badsyntax<%= host %>
    http:
      paths:
      - path: /
        backend:
          serviceName: integration-test-nginx-svc
          servicePort: 80
        path: /dps/("health")$
