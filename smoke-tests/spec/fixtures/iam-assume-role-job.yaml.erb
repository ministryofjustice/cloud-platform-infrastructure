apiVersion: batch/v1
kind: Job
metadata:
  name: <%= job_name %>
spec:
  backoffLimit: 4
  template:
    metadata:
      annotations: 
        iam.amazonaws.com/role: <%= role %>
    spec:
      restartPolicy: Never
      containers:
      - name: iam-assume-role-ctr
        image: ministryofjustice/cloud-platform-integration-test-images:1.1
        env:
        - name: KUBERNETES_CLUSTER
          value: <%= kubernetes_cluster %>
        - name: ACCOUNT_ID
          value: "<%= account_id %>"
        - name: AWS_REGION
          value: <%= aws_region %>
        - name: ROLE_NAME
          value: <%= role %>
    
