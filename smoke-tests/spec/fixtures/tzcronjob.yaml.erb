apiVersion: cronjobber.hidde.co/v1alpha1
kind: TZCronJob
metadata:
  name: <%= job_name %>
  namespace: <%= namespace %>
spec:
  schedule: "*/1 * * * *"
  timezone: "Europe/Amsterdam"
  jobTemplate:
    spec:
      template:
        spec:
            containers:
            - name: nginx
              image: bitnami/nginx
              command: ["echo", "hello world"]
            restartPolicy: OnFailure